<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextColor">@color/darkColor</item>
        <item name="actionMenuTextColor">@color/darkColor</item>
        <item name="titleTextColor">@color/lightPrimary</item>
        <item name="android:textColorPrimary">@color/darkColor</item>
        <item name="android:textColorSecondary">@color/darkColor</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="actionBarStyle">@style/Toolbar</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="editTextStyle">@style/Input</item>
    </style>

    <style name="Padding">
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:color">@color/lightPrimary</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:tint">@color/lightPrimary</item>
        <item name="android:textColor">@color/lightPrimary</item>
        <item name="android:textColorPrimary">@color/lightPrimary</item>
        <item name="android:textColorSecondary">@color/lightPrimary</item>
        <item name="titleTextColor">@color/lightPrimary</item>
        <item name="actionMenuTextColor">@color/lightPrimary</item>
    </style>


    <style name="Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardBackgroundColor">@color/lightPrimary</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="SearchCard" parent="Card">
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardBackgroundColor">@color/lightPrimary</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="contentPadding">8dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">8dp</item>
    </style>


    <style name="Input" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/input_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/darkColor</item>
    </style>


    <style name="Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/darkColor</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="SubTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/darkColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TitleLight" parent="Title">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/lightPrimary</item>
    </style>

    <style name="SubTitleLight" parent="SubTitle">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textColor">@color/lightSecondary</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/redPrimary</item>
    </style>


    <style name="PrimaryButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/darkColor</item>
        <item name="android:background">@drawable/btn_orange</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">2dp</item>
    </style>


    <style name="SecondaryButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/darkColor</item>
        <item name="android:background">@drawable/btn_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">2dp</item>
    </style>


    <style name="Progressbar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:color">@color/orangePrimary</item>
        <item name="android:layout_marginTop">-6dp</item>
        <item name="android:layout_marginBottom">-6dp</item>
        <item name="android:indeterminate">true</item>
    </style>

</resources>
