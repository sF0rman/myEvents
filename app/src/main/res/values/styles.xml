<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TitleBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/gradient_blue</item>
    </style>

    <style name="InputField" parent="TextAppearance.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:background">@drawable/input_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PrimaryButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/btn_orange</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SecondaryButtons" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/btn_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppButtons" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:color">@color/errorRed</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
