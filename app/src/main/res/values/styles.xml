<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TitleBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/gradient_blue</item>
    </style>

    <style name="InputField" parent="TextAppearance.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:background">@drawable/input_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PrimaryButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/btn_orange</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="SecondaryButtons" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/btn_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="AppButtons" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/errorRed</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LightTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/lightColor</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="DarkTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="DarkSubTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="LightNormalText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/lightColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CardBlue" parent="CardView">
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">12dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="CardLight" parent="CardView">
        <item name="cardBackgroundColor">@color/lightColor</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="contentPadding">12dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">8dp</item>
    </style>

</resources>
