<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff">

    <androidx.cardview.widget.CardView
        android:id="@+id/event_card_cardlayout"
        style="@style/CardBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/event_card_constraintlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_card_event_name"
                style="@style/LightTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EventName" />


            <TextView
                android:id="@+id/event_card_event_location"
                style="@style/LightNormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_location" />

            <TextView
                android:id="@+id/event_card_event_going"
                style="@style/LightNormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/temp_ppl_going" />

            <TextView
                android:id="@+id/event_card_event_start"
                style="@style/LightNormalText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Thu, 18th July 2019" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>